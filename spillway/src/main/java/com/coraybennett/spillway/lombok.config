# Lombok configuration for Spillway project

# Enable Lombok features
lombok.addJavaxGeneratedAnnotation = true

# Better equals and hashCode for entities
lombok.equalsAndHashCode.callSuper = call

# Generate helpful toString methods
lombok.toString.includeFieldNames = true

# Logging configuration
lombok.log.fieldName = log
lombok.log.fieldIsStatic = true

# Prevent accidental usage of experimental features  
lombok.experimental.flagUsage = error

# Configure builder for better API
lombok.builder.flagUsage = warn
lombok.singular.auto = true

# Prevent issues with JPA entities
lombok.anyConstructor.addConstructorProperties = true